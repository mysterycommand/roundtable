{
  "name": "@rnd/monorepo",
  "version": "1.0.0",
  "description": "An experimental WebRTC monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "^14.15.5",
    "npm": "^7.5.4"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "lerna bootstrap",
    "dev:build-server": "lerna run watch --scope @rnd/server --stream",
    "dev:start-server": "nodemon apps/server/dist/index.js",
    "dev:serve-client": "lerna run dev --scope @rnd/client --stream",
    "dev": "concurrently \"npm:dev:*\"",
    "build": "lerna run build --stream",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --fix --max-warnings 0",
    "prettier": "prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mysterycommand/roundtable.git"
  },
  "keywords": [
    "experimental",
    "webrtc",
    "monorepo"
  ],
  "author": "Matt Hayes <matt@mysterycommand.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mysterycommand/roundtable/issues"
  },
  "homepage": "https://github.com/mysterycommand/roundtable#readme",
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@rnd/eslint-config": "file:packages/eslint-config",
    "@snowpack/plugin-typescript": "1.2.1",
    "commitizen": "4.2.4",
    "concurrently": "6.2.0",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.12.15",
    "eslint": "7.30.0",
    "husky": "7.0.1",
    "lerna": "4.0.0",
    "lint-staged": "11.0.1",
    "node-pre-gyp": "0.17.0",
    "nodemon": "2.0.12",
    "prettier": "2.3.2",
    "snowpack": "3.8.2",
    "typescript": "4.3.5"
  },
  "lint-staged": {
    ".": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "tsconfig.json"
        ],
        "options": {
          "parser": "json-stringify"
        }
      }
    ]
  },
  "eslintConfig": {
    "extends": "@rnd"
  },
  "eslintIgnore": [
    "dist",
    "exclude"
  ]
}
