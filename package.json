{
  "name": "@rnd/monorepo",
  "version": "1.0.0",
  "description": "An experimental WebRTC monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "^14.15.5",
    "npm": "^7.5.4"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "lerna bootstrap",
    "dev:build-server": "lerna run watch --scope @rnd/server --stream",
    "dev:start-server": "nodemon apps/server/dist/app.js",
    "dev:serve-client": "lerna run dev --scope @rnd/client --stream",
    "dev": "concurrently \"npm:dev:*\"",
    "build": "lerna run build --stream",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mysterycommand/roundtable.git"
  },
  "keywords": [
    "experimental",
    "webrtc",
    "monorepo"
  ],
  "author": "Matt Hayes <matt@mysterycommand.com>",
  "license": "MITs",
  "bugs": {
    "url": "https://github.com/mysterycommand/roundtable/issues"
  },
  "homepage": "https://github.com/mysterycommand/roundtable#readme",
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@snowpack/plugin-typescript": "1.2.1",
    "@typescript-eslint/eslint-plugin": "4.21.0",
    "@typescript-eslint/parser": "4.21.0",
    "commitizen": "4.2.3",
    "concurrently": "6.0.1",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.11.7",
    "eslint": "7.24.0",
    "husky": "^6.0.0",
    "lerna": "4.0.0",
    "lint-staged": "10.5.4",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "snowpack": "3.2.2",
    "typescript": "4.2.4"
  },
  "lint-staged": {
    "**/*.{json,md,ts,tsx}": "prettier --write",
    "{apps,packages}/**/*.ts": "eslint --fix --max-warnings 0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "tsconfig.json"
        ],
        "options": {
          "parser": "json-stringify"
        }
      }
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "@typescript-eslint/ban-ts-comment": "off"
    },
    "overrides": [
      {
        "files": [
          "snowpack.config.cjs"
        ],
        "rules": {
          "@typescript-eslint/no-var-requires": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "dist"
  ]
}
